<h2>Edit Comment</h2>

<%= form_with model: [@post, @comment] do |f| %>
    <% if @comment.errors.any? %>
        <% @comment.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    <p><%= f.text_area :body %></p>
    <p><%= f.submit('Edit') %></p>
<% end %>
<%= link_to 'Back', post_path(@post) %>
