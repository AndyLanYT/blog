<h2>Edit Post</h2>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    <p>
        Title<br>
        <%= f.text_field :title %>
    </p>
    <p>
        Description<br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<p>
    <%= link_to 'All posts', posts_path %>
</p>
