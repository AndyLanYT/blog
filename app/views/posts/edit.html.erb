<h2>Edit Post</h2>

<%= form_for :post, url: posts_path do |f| %>
    <p>
        Title<br>
        <%= f.text_field :title %>
    </p>
    <p>
        Description<br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<p>
    <%= link_to 'All posts', posts_path %>
</p>
