<h2>New Post</h2>

<%= form_for :post, url: posts_path do |f| %>
    <p>
        Title<br>
        <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>
    <p>
        Description<br>
        <%= f.text_area(:description, {:class => 'form-control'}) %>
    </p>
    <p>
        <%= f.submit({:class => 'btn btn-success'}) %>
    </p>
<% end %>
